<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Village</title>
    <link rel="icon" type="image/png" href="~/img/icon_128x128.png" />

    <link href="https://fonts.googleapis.com/css?family=Fira+Mono|Hind|Karma" rel="stylesheet">

    <link href="~/css/vendor.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/main.css" rel="stylesheet" asp-append-version="true" />

    @RenderSection("Styles", required: false)

</head>
<body class="layout layout-header-fixed">

    @await Html.PartialAsync("_Navbar")
    <div class="layout-main">
        @await Html.PartialAsync("_Sidenav")
        <div class="layout-content">
            <div class="layout-content-body">
                @RenderBody()
            </div>
        </div>
        @await Html.PartialAsync("_Footer.cshtml")
    </div>
    @await Html.PartialAsync("_Settings.cshtml")

    <script src="~/js/vendor.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
