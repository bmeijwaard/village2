{
  "root": "./",
  "deployment": {
    "local": {
      "path": "build"
    },
    "remote": {
      "host": "YOUR HOST"
    }
  },
  "versioning": {
    "files": [
      "./package.json"
    ]
  },
  "dotnet": {
    "https": "https://localhost:44315/",
    "http": "http://localhost:60449/",
    "port": 60449,
    "useHttps": true,
    "csproj": "Village.csproj"
  },
  "assets": {
    "scss": {
      "source": [
        "Assets/scss/vendor.scss"
      ]
    },
    "css": {
      "source": [
      ],
      "dest": "wwwroot/css"
    },
    "js": {
      "source": [
        "Assets/js/application.js"
      ],
      "dest": "wwwroot/js"
    },
    "fonts": {
      "source": [
        "Assets/fonts/**/*"
      ],
      "dest": "wwwroot/fonts"
    },
    "img": {
      "source": [
        "Assets/img/**/*"
      ],
      "dest": "wwwroot/img"
    },
    "clean": [
      "wwwroot/fonts",
      "wwwroot/img",
      "wwwroot/css",
      "wwwroot/js"
    ]
  },
  "stylesheets": {
    "base": "Styles/main.scss",
    "files": "Styles/**/*",
    "dest": "wwwroot/css"
  },
  "javascript": {
    "source": "Components/**/*.js",
    "dest": "wwwroot/js"
  },
  "razor": {
    "source": "Views/**/*.cshtml"
  },
